<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_item_user"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    android:layout_margin="@dimen/_10sdp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_users_image"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="25dp"
        android:text="TextView"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintStart_toEndOf="@+id/item_users_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_users_last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:maxLines="1"
        android:text="TextView"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toEndOf="@+id/item_users_image"
        app:layout_constraintTop_toBottomOf="@+id/item_users_name" />
</androidx.constraintlayout.widget.ConstraintLayout>